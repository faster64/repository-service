FROM microsoft/dotnet:3.0-sdk AS base
WORKDIR /app
EXPOSE 80

FROM microsoft/dotnet:2.1-sdk AS build
WORKDIR /
COPY KiotVietTimeSheet.sln .
COPY ./src /src
COPY ./tests /tests
RUN dotnet restore

WORKDIR /src/User Interface/Api/KiotVietTimeSheet.Api
RUN dotnet build KiotVietTimeSheet.Api.csproj -c Release -o /app

FROM build AS publish
RUN dotnet publish KiotVietTimeSheet.Api.csproj -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "KiotVietTimeSheet.Api.dll"]
